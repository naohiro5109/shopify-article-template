<section class="{{ section.id }}-article-wrapper">
  <div class="{{ section.id }}-article-cont">
    {%- if section.settings.title != blank -%}
      {% render 'article-title',
        title: section.settings.title
      %}
    {%- endif -%}
    <div class="{{ section.id }}-col3">
      {% for block in section.blocks %}
        {%- if block.settings.image or block.settings.alt != blank -%}
          <figure>
            <img
              src="{{ block.settings.image | image_url }}"
              alt="{{ block.settings.alt }}"
              width="100%"
              height="auto"
              loading="lazy"
            >
          </figure>
        {%- endif -%}
      {% endfor %}
    </div>
  </div>
</section>

{% style %}
  /* common */
  .{{ section.id }}-article-wrapper {
    padding-bottom: {{ section.settings.padding_bottom_pc }}px;
  }
  .{{ section.id }}-article-cont {
    margin: 0 auto;
    padding-left: 14px;
    padding-right: 14px;
    max-width: 1200px;
  }
  .{{ section.id }}-col3 {
    display: grid;
    grid-template-columns:repeat(3, minmax(0, 1fr));
    gap: 20px;
  }

  .{{ section.id }}-title {
    padding: 20px 0;
    padding-left: 14px;
    margin-bottom: 40px;
    background-color: #D9D9D9;
  }

  @media screen and (max-width: 768px) {
    .{{ section.id }}-article-wrapper {
      padding-bottom: {{ section.settings.padding_bottom_sp }}px;
    }
    .{{ section.id }}-col3 {
      grid-template-columns: 1fr;
    }

    .{{ section.id }}-title {
      margin-left: -14px;
      margin-right: -14px;
    }
  }
{% endstyle %}

{% schema %}
  {
    "name": "ブログ記事：ステップ",
    "settings": [
      {
        "type": "textarea",
        "id": "title",
        "label": "セクションタイトル"
      },
      {
        "type": "range",
        "id": "padding_bottom_pc",
        "label": "下部パディング(PC)",
        "max": 100,
        "min": 0,
        "step": 5,
        "default": 100
      },
      {
        "type": "range",
        "id": "padding_bottom_sp",
        "label": "下部パディング(SP)",
        "max": 100,
        "min": 0,
        "step": 5,
        "default": 50
      }
    ],
    "blocks": [
      {
        "type": "step",
        "name": "ステップ",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "ステップ画像"
          },
          {
            "type": "textarea",
            "id": "alt",
            "label": "ステップ画像代替テキスト"
          }
        ]
      }
    ]
  }
{% endschema %}