              { "value": "500", "label": "ノーマル" },
              { "value": "700", "label": "太字" }
            ],
            "default": "400"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "商品説明テキスト"
          },
          {
            "type": "range",
            "id": "text_font_size",
            "label": "フォントサイズ",
            "min": 14,
            "max": 32,
            "default": 16,
            "unit": "px"
          },
          {
            "type": "color",
            "id": "text_font_color",
            "label": "文字色",
            "default": "#000000"
          },
          {
            "type": "select",
            "id": "text_font_weight",
            "label": "フォント太さ",
            "options": [
              { "value": "400", "label": "細字" },
              { "value": "500", "label": "ノーマル" },
              { "value": "700", "label": "太字" }
            ],
            "default": "400"
