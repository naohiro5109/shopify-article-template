<section class="{{ section.id }}-article-wrapper">
  <div class="{{ section.id }}-article-cont">
    {%- if section.settings.title != blank -%}
      {% render 'article-title', title: section.settings.title, section.id: section.id %}
    {%- endif -%}
    <ul class="{{ section.id }}-col2">
      {% assign ranking_collection = collections['ranking'] %}
      {% for product in ranking_collection.products limit: 8 %}
        {% render 'article-item', product: product, section.id: section.id %}
      {% endfor %}
    </ul>
  </div>
</section>

{% style %}
  /* common */
  ul {
    margin: 0;
    padding: 0;
  }
  li {
    list-style: none;
  }
  figure {
    margin: 0;
  }
  h3 {
    margin: 0;
  }
  p {
    margin: 0;
  }
  a {
    text-decoration: none;
    color: #000;
  }
  .{{ section.id }}-article-wrapper {
    padding-bottom: {{ section.settings.padding_bottom_pc }}px;
  }
  .{{ section.id }}-article-cont {
    margin: 0 auto;
    padding-left: 14px;
    padding-right: 14px;
    max-width: 1200px;
  }
  .{{ section.id }}-col2 {
    display: grid;
    grid-template-columns:repeat(2, minmax(0, 1fr));
    gap: 20px;
  }

  .{{ section.id }}-title {
    padding: 20px 0;
    padding-left: 14px;
    margin-bottom: 40px;
    background-color: #D9D9D9;
  }

  /* item list */
  .{{ section.id }}-item-list-img {
    display: block;
    object-fit: cover;
    aspect-ratio: 1 / 1;
    padding-bottom: 10px;
    width: 100%;
  }
  .{{ section.id }}-item {
    padding-bottom: 10px;
  }
  .{{ section.id }}-item-list-price {
    padding-bottom: 10px;
  }
  .{{ section.id }}-item-list-text {
    padding-bottom: 14px;
  }
  .{{ section.id }}-item-list-button {
    padding: 10px 24px;
    background-color: #D9D9D9;
  }

  @media screen and (max-width: 768px) {
    .{{ section.id }}-article-wrapper {
      padding-bottom: {{ section.settings.padding_bottom_sp }}px;
    }

    .{{ section.id }}-title {
      margin-left: -14px;
      margin-right: -14px;
    }
  }
{% endstyle %}

