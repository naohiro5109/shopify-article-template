<section class="ranking {{ section.id }}-article-wrapper">
  <div class="content padding-LR">
    {% render 'article-title',
      title: section.settings.title
    %}
    <ul class="col2">
      {% for block in section.blocks %}
        <li class="item-list">
          <a href="{{ block.settings.url }}">
            <figure>
              <img
                src="{{ block.settings.image | image_url }}"
                alt="{{ block.settings.alt }}"
                width="100%"
                height="auto"
                loading="lazy"
              >
            </figure>
            <h3
              style="
                font-size: {{ block.settings.item_font_size }}px;
                color: {{ block.settings.item_font_color }};
                font-weight: {{ block.settings.item_font_weight }};
              "
            >
              {{ block.settings.item }}
            </h3>
            <p
              style="
                font-size: {{ block.settings.price_font_size }}px;
                color: {{ block.settings.price_font_color }};
                font-weight: {{ block.settings.price_font_weight }};
              "
              class="item-list-price"
            >
              ￥{{ block.settings.price }}（税込）
            </p>
            <p
              style="
                font-size: {{ block.settings.text_font_size }}px;
                color: {{ block.settings.text_font_color }};
                font-weight: {{ block.settings.text_font_weight }};
              "
              class="item-list-text"
            >
              {{ block.settings.text }}
            </p>
            <button
              style="
                font-size: {{ block.settings.button_font_size }}px;
                color: {{ block.settings.button_font_color }};
                font-weight: {{ block.settings.button_font_weight }};
              "
              class="item-list-button"
            >
              {{ block.settings.button }}
            </button>
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>

{% style %}
  /* common */
  ul {
    margin: 0;
    padding: 0;
  }
  li {
    list-style: none;
  }
  figure {
    margin: 0;
  }
  h3 {
    margin: 0;
  }
  p {
    margin: 0;
  }
  a {
    text-decoration: none;
    color: #000;
  }
  .{{ section.id }}-article-wrapper {
    padding-bottom: {{ section.settings.padding_bottom_pc }}px;
  }
  .padding-LR {
    padding: 0 14px;
  }
  .content {
    margin: 0 auto;
    max-width: 1200px;
  }
  .col2 {
    display: grid;
    grid-template-columns:repeat(2, minmax(0, 1fr));
    gap: 20px;
  }

  .title {
    padding: 20px 0;
    padding-left: 14px;
    margin-bottom: 40px;
    background-color: #D9D9D9;
  }

  /* item list */
  .item-list-price {
    padding-bottom: 10px;
  }
  .item-list-text {
    padding-bottom: 14px;
  }
  .item-list-button {
    padding: 10px 24px;
    background-color: #D9D9D9;
  }

  @media screen and (max-width: 768px) {
    .{{ section.id }}-article-wrapper {
      padding-bottom: {{ section.settings.padding_bottom_sp }}px;
    }

    .title {
      margin-left: -14px;
      margin-right: -14px;
    }
  }
{% endstyle %}

