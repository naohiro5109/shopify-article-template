            "default": "#000000"
          },
          {
            "type": "select",
            "id": "button_font_weight",
            "label": "フォント太さ",
            "options": [
              { "value": "400", "label": "細字" },
              { "value": "500", "label": "ノーマル" },
              { "value": "700", "label": "太字" }
            ],
            "default": "400"
          }
        ]
      }
    ]
  }
{% endschema %}