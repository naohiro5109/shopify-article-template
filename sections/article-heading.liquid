<section class="heading padding-bottom">
  <div class="content">
    <div class="heading-wrapper padding-LR">
      <figure>
        <img
          src="{{ section.settings.image | image_url }}"
          alt="{{ section.settings.alt }}"
          width="100%"
          height="auto"
          loading="lazy"
        >
      </figure>
      <div class="heading-textWrap">
        <h1
          style="
            font-size: {{ section.settings.title_font_size }}px;
            color: {{ section.settings.title_font_color }};
            font-weight: {{ section.settings.title_font_weight }};
          "
        >
          {{ section.settings.title }}
        </h1>
        <ul class="heading-listWrap">
          {% for block in section.blocks %}
            <li
              style="
                font-size: {{ block.settings.list_font_size }}px;
                color: {{ block.settings.list_font_color }};
                font-weight: {{ block.settings.list_font_weight }};
              "
            >
              {{ block.settings.list }}
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

{% style %}
  .padding-bottom {
    padding-bottom: 100px;
  }
  .padding-LR {
    padding: 0 14px;
  }
  .content {
    margin: 0 auto;
    max-width: 1200px;
  }
  h1 {
    margin: 0;
    padding-bottom: 20px;
  }
  .heading {
    margin: 20px 0;
  }
  .heading-wrapper {
    display: grid;
    grid-template-columns: 60% 1fr;
    align-items: center;
    gap: 20px;
  }
  .heading-textWrap h3 {
    padding-bottom: 20px;
  }
  .heading-listWrap li {
    font-size: 20px;
  }
  @media screen and (max-width: 768px) {
    .padding-bottom {
      padding-bottom: 50px;
    }
    .heading-wrapper {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

{% schema %}
  {
    "name": "ブログ記事: 見出し",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "画像"
      },
      {
        "type": "textarea",
        "id": "alt",
        "label": "画像代替テキスト"
      },
      {
        "type": "textarea",
        "id": "title",
        "label": "タイトル"
      },
      {
        "type": "range",
        "id": "title_font_size",
        "label": "フォントサイズ",
        "min": 14,
        "max": 32,
        "default": 16,
        "unit": "px"
      },
      {
        "type": "color",
        "id": "title_font_color",
        "label": "文字色",
        "default": "#000000"
      },
      {
        "type": "select",
        "id": "title_font_weight",
        "label": "フォント太さ",
        "options": [
          { "value": "400", "label": "細字" },
          { "value": "500", "label": "ノーマル" },
          { "value": "700", "label": "太字" }
        ],
        "default": "400"
      }
    ],
    "blocks": [
      {
        "type": "textarea",
        "name": "リスト",
        "settings": [
          {
            "type": "textarea",
            "id": "list",
            "label": "リスト"
          },
          {
            "type": "range",
            "id": "list_font_size",
            "label": "フォントサイズ",
            "min": 14,
            "max": 32,
            "default": 16,
            "unit": "px"
          },
          {
            "type": "color",
            "id": "list_font_color",
            "label": "文字色",
            "default": "#000000"
          },
          {
            "type": "select",
            "id": "list_font_weight",
            "label": "フォント太さ",
            "options": [
              { "value": "400", "label": "細字" },
              { "value": "500", "label": "ノーマル" },
              { "value": "700", "label": "太字" }
            ],
            "default": "400"
          }
        ],
      }
    ]
  }
{% endschema %}